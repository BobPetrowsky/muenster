<h1>Add Job</h1>

<%= form_for @job do |f| %>
  <% if @job.errors.any? %>
    <ul id="errors">
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :company_id %>
    <%= f.select :company_id, options_from_collection_for_select(@companies, :id, :name) %>
  </div>

  <%= f.submit %>
<% end %>
